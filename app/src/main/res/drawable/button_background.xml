<?xml version="1.0" encoding="utf-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- State when button is pressed -->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#FF4081" /> <!-- Background color when pressed -->
                <corners android:radius="15dp" /> <!-- Rounded corners -->
            </shape>
        </item>

        <!-- Default state -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FF5722" /> <!-- Background color -->
                <corners android:radius="15dp" /> <!-- Rounded corners -->
            </shape>
        </item>

    </selector>

